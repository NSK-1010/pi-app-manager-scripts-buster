name="medit"
package_name="medit"
description="軽量なテキストエディタ"
run_preparing=false
install(){
    wget http://kr.archive.ubuntu.com/ubuntu/pool/universe/m/medit/medit_1.2.0-3_amd64.deb
    apt-get install ./medit_1.2.0-3_amd64.deb
    rm medit_1.2.0-3_amd64.deb
}
uninstall(){
    apt-get purge ${package_name} -y
    apt-get autoremove --purge -y
}
